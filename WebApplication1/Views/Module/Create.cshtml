@model Module

<h2>Add New Module</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" class="form-control" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId">Select Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
