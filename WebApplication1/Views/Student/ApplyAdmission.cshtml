@model WebApplication1.Models.Application
@{
    ViewData["Title"] = "Apply for Admission";
}

<h2>Apply for Admission</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="ApplyAdmission" method="post">
    <h4>Personal Information</h4>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <h4>Course Selection</h4>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label">Select Course</label>
        <select asp-for="CourseId" class="form-control">
            <option value="" disabled selected>Select a Course</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.CourseId">@course.CourseName</option>
            }
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudyYear" class="control-label">Study Year</label>
        <select asp-for="StudyYear" class="form-control">
            <option value="" disabled selected>Select Study Year</option>
            <option value="2025">2025</option>
            <option value="2026">2026</option>
            <option value="2027">2027</option>
            <option value="2028">2028</option>
        </select>
        <span asp-validation-for="StudyYear" class="text-danger"></span>
    </div>

    <h4>Application Fee</h4>
    <div class="form-group">
        <label asp-for="ApplicationFee" class="control-label">Application Fee</label>
        <input asp-for="ApplicationFee" type="number" class="form-control" readonly value="50.00" />
        <span asp-validation-for="ApplicationFee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Application</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}